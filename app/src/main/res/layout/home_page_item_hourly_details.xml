<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:background="@drawable/general_border">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forecastTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/darkGray"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="15:00" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/forecastWeatherIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/forecastWeatherTempTitle"
        app:layout_constraintEnd_toEndOf="@+id/forecastTimeTitle"
        app:layout_constraintStart_toStartOf="@+id/forecastTimeTitle"
        app:layout_constraintTop_toBottomOf="@+id/forecastTimeTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forecastWeatherTempTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/darkGray"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/forecastTimeTitle"
        app:layout_constraintStart_toStartOf="@+id/forecastTimeTitle"
        android:layout_marginBottom="20dp"
        tools:text="22" />

</androidx.constraintlayout.widget.ConstraintLayout>